<%= render "layouts/totalscore" %>

<p id="notice"><%= notice %></p>

<p>
<h1>
  Race: <%= @race.race_id %>
</h1>
</p>

<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <p>
        <strong>Blue score:</strong>
        <%= @race.blue_score %>
      </p>
    </div>
    <div class="col-sm-6 col-md-4">
      <p>
        <strong>Red score:</strong>
        <%= @race.red_score %>
      </p>
    </div>
    <div class="clearfix visible-sm-block"></div>
    <div class="col-sm-6 col-md-4">
      <p>
        <strong>White score:</strong>
        <%= @race.white_score %>
      </p>
    </div>
    <div class="col-sm-6 col-md-4">
      <p>
        <strong>Yellow score:</strong>
        <%= @race.yellow_score %>
      </p>
    </div>
    <div class="clearfix visible-sm-block"></div>
  </div>
</div>


</p>


<%= link_to 'Edit', edit_race_path(@race) %> |
<%= link_to 'Back', races_path %>
